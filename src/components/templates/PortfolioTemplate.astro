---
import Layout from '../../layouts/Layout.astro';
import GitHubIcon from '../icons/GitHubIcon.astro';
import ExternalLinkIcon from '../icons/ExternalLinkIcon.astro';

interface Props {
  lang: 'ko' | 'en';
  projects: any[];
  labels: any;
}

const { lang, projects, labels } = Astro.props;
const basePath = lang === 'en' ? `${import.meta.env.BASE_URL}/en` : import.meta.env.BASE_URL;
---

<Layout title={`${labels.portfolio} | Portfolio`} description={lang === 'ko' ? '개인 프로젝트 포트폴리오' : 'Personal Project Portfolio'} lang={lang}>
  <div class="mx-auto max-w-4xl">
    <header class="mb-10 text-center">
      <h1 class="text-4xl font-bold text-gray-900 dark:text-white sm:text-5xl">
        {labels.portfolio}
      </h1>
      <p class="mt-4 text-lg text-gray-600 dark:text-gray-400">
        {lang === 'ko' ? '개인 및 팀 프로젝트 모음' : 'Collection of personal and team projects'}
      </p>
    </header>

    <div class="grid gap-6 sm:grid-cols-2">
      {projects.map((project, index) => {
        const projectName = project.name[lang] || project.name.ko;
        const projectSummary = project.summary[lang] || project.summary.ko;
        const period = `${project.period.start} — ${project.period.end}`;
        
        return (
          <article class="group overflow-hidden rounded-xl border border-gray-200 bg-white shadow-sm transition-all hover:shadow-md dark:border-gray-700 dark:bg-gray-800">
            {/* Cover Image */}
            {project.coverImage && (
              <a href={`${basePath}/portfolio/${project.slug}`} class="block aspect-video overflow-hidden">
                <img 
                  src={project.coverImage} 
                  alt={projectName}
                  class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
                  loading="lazy"
                />
              </a>
            )}
            
            <div class="p-6">
            <div class="mb-3 flex items-center justify-between">
              <span class={`inline-block rounded-full px-2.5 py-0.5 text-xs font-medium ${project.type === 'team' ? 'bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-300' : 'bg-green-100 text-green-700 dark:bg-green-900/30 dark:text-green-300'}`}>
                {project.type === 'team' ? labels.team : labels.personal}
              </span>
              <span class="text-xs text-gray-500 dark:text-gray-400">
                {period}
              </span>
            </div>

            <h2 class="mb-2 text-xl font-bold text-gray-900 dark:text-white">
              <a 
                href={`${basePath}/portfolio/${project.slug}`}
                class="transition-colors hover:text-primary-600 dark:hover:text-primary-400"
              >
                {projectName}
              </a>
            </h2>

            <p class="mb-4 line-clamp-2 text-sm text-gray-600 dark:text-gray-400">
              {projectSummary}
            </p>

            {/* Skills */}
            <div class="mb-4 flex flex-wrap gap-1.5">
              {project.skills.slice(0, 4).map((skill: string) => (
                <span class="rounded-md bg-primary-50 px-2 py-0.5 text-xs font-medium text-primary-700 dark:bg-primary-900/30 dark:text-primary-300">
                  {skill}
                </span>
              ))}
              {project.skills.length > 4 && (
                <span class="rounded-md bg-gray-100 px-2 py-0.5 text-xs font-medium text-gray-500 dark:bg-gray-700 dark:text-gray-400">
                  +{project.skills.length - 4}
                </span>
              )}
            </div>

            {/* Links */}
            <div class="flex items-center justify-between">
              <div class="flex gap-3">
                {project.github && (
                  <a 
                    href={project.github} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="text-gray-500 transition-colors hover:text-gray-900 dark:text-gray-400 dark:hover:text-white"
                    title={labels.github}
                  >
                    <GitHubIcon class="h-5 w-5" />
                  </a>
                )}
              </div>
              <a 
                href={`${basePath}/portfolio/${project.slug}`}
                class="inline-flex items-center gap-1 text-sm font-medium text-primary-600 transition-colors hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300"
              >
                {labels.viewDetails}
                <ExternalLinkIcon class="h-3.5 w-3.5" />
              </a>
            </div>
            </div>
          </article>
        );
      })}
    </div>
  </div>
</Layout>

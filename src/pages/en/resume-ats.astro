---
import resumeData from '../../data/resume.en.json';

const data = {
  ...resumeData.personalInfo,
  summary: resumeData.summary,
  skills: resumeData.skills,
  experience: resumeData.experience,
  education: resumeData.education,
  projects: resumeData.projects,
  certifications: resumeData.certifications,
  languages: resumeData.languages,
};
const labels = resumeData.labels;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{data.name} - Resume (ATS Optimized)</title>
  <style>
    /* 
     * ATS-Optimized Resume Styles
     * - Single column layout
     * - No tables, columns, or complex layouts
     * - Simple, readable fonts
     * - High contrast text
     * - Clean semantic HTML
     */
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html {
      font-size: 12pt;
    }

    body {
      font-family: Arial, Helvetica, sans-serif;
      color: #000;
      background: #fff;
      line-height: 1.5;
      max-width: 800px;
      margin: 0 auto;
      padding: 24px;
    }

    /* Header */
    header {
      margin-bottom: 24px;
      border-bottom: 2px solid #000;
      padding-bottom: 16px;
    }

    h1 {
      font-size: 24pt;
      font-weight: bold;
      margin-bottom: 4px;
    }

    .title {
      font-size: 14pt;
      font-weight: normal;
      color: #333;
      margin-bottom: 12px;
    }

    .contact {
      font-size: 11pt;
    }

    .contact-item {
      margin-right: 16px;
    }

    /* Sections */
    section {
      margin-bottom: 20px;
    }

    h2 {
      font-size: 14pt;
      font-weight: bold;
      text-transform: uppercase;
      border-bottom: 1px solid #000;
      padding-bottom: 4px;
      margin-bottom: 12px;
    }

    h3 {
      font-size: 12pt;
      font-weight: bold;
      margin-bottom: 2px;
    }

    p {
      font-size: 11pt;
      margin-bottom: 8px;
    }

    /* Experience & Education items */
    .item {
      margin-bottom: 16px;
    }

    .item-header {
      margin-bottom: 4px;
    }

    .company,
    .institution {
      font-weight: bold;
    }

    .date {
      font-style: italic;
    }

    .position,
    .degree {
      font-weight: normal;
    }

    /* Lists */
    ul {
      margin-left: 20px;
      margin-bottom: 8px;
    }

    li {
      font-size: 11pt;
      margin-bottom: 4px;
    }

    /* Skills - comma separated for ATS */
    .skills-list {
      font-size: 11pt;
    }

    .skill-category {
      font-weight: bold;
    }

    /* Links */
    a {
      color: #000;
      text-decoration: none;
    }

    /* Print styles */
    @media print {
      body {
        padding: 0;
      }

      .no-print {
        display: none !important;
      }
    }

    @page {
      margin: 1in;
      size: letter;
    }

    /* Back link */
    .back-link {
      display: block;
      text-align: center;
      padding: 12px;
      background: #f0f0f0;
      margin-bottom: 20px;
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <a href="/resume-site/en/resume" class="back-link no-print">← {labels.backToResume}</a>

  <!-- Header - Simple name and contact -->
  <header>
    <h1>{data.name}</h1>
    <p class="title">{data.title}</p>
    <p class="contact">
      {data.email && <span class="contact-item">{data.email}</span>}
      {data.phone && <span class="contact-item">{data.phone}</span>}
      {data.location && <span class="contact-item">{data.location}</span>}
    </p>
    {(data.github || data.linkedin || data.website) && (
      <p class="contact">
        {data.github && <span class="contact-item">{data.github}</span>}
        {data.linkedin && <span class="contact-item">{data.linkedin}</span>}
        {data.website && <span class="contact-item">{data.website}</span>}
      </p>
    )}
  </header>

  <!-- Summary / Professional Profile -->
  {data.summary && (
    <section>
      <h2>PROFESSIONAL SUMMARY</h2>
      <p>{data.summary}</p>
    </section>
  )}

  <!-- Skills - Listed as comma-separated for ATS parsing -->
  {data.skills && data.skills.length > 0 && (
    <section>
      <h2>SKILLS</h2>
      {data.skills.map((skillGroup) => (
        <p class="skills-list">
          <span class="skill-category">{skillGroup.category}:</span>{' '}
          {skillGroup.items.map(s => s.name).join(', ')}
        </p>
      ))}
    </section>
  )}

  <!-- Experience - Clear formatting for ATS -->
  {data.experience && data.experience.length > 0 && (
    <section>
      <h2>WORK EXPERIENCE</h2>
      {data.experience.map((exp) => (
        <div class="item">
          <div class="item-header">
            <h3>
              <span class="company">{exp.company}</span> — <span class="position">{exp.position}</span>
            </h3>
            <p class="date">{exp.startDate} - {exp.current ? labels.current : exp.endDate}</p>
          </div>
          {exp.description && <p>{exp.description}</p>}
          {exp.highlights && exp.highlights.length > 0 && (
            <ul>
              {exp.highlights.map((highlight) => (
                <li>{highlight}</li>
              ))}
            </ul>
          )}
        </div>
      ))}
    </section>
  )}

  <!-- Education -->
  {data.education && data.education.length > 0 && (
    <section>
      <h2>EDUCATION</h2>
      {data.education.map((edu) => (
        <div class="item">
          <h3>
            <span class="institution">{edu.institution}</span>
          </h3>
          <p>
            <span class="degree">{edu.degree}</span>
            {edu.field && <span>, {edu.field}</span>}
          </p>
          <p class="date">
            {edu.startDate} - {edu.endDate}
            {edu.gpa && <span> | GPA: {edu.gpa}</span>}
          </p>
        </div>
      ))}
    </section>
  )}

  <!-- Projects -->
  {data.projects && data.projects.length > 0 && (
    <section>
      <h2>PROJECTS</h2>
      {data.projects.map((project) => (
        <div class="item">
          <h3>{project.name}</h3>
          <p>{project.description}</p>
          {project.technologies && project.technologies.length > 0 && (
            <p>Technologies: {project.technologies.join(', ')}</p>
          )}
        </div>
      ))}
    </section>
  )}

  <!-- Certifications -->
  {data.certifications && data.certifications.length > 0 && (
    <section>
      <h2>CERTIFICATIONS</h2>
      {data.certifications.map((cert) => (
        <p>
          <strong>{cert.name}</strong> — {cert.issuer}, {cert.date}
        </p>
      ))}
    </section>
  )}

  <!-- Languages -->
  {data.languages && data.languages.length > 0 && (
    <section>
      <h2>LANGUAGES</h2>
      <p>
        {data.languages.map((lang, index) => (
          <span>
            {lang.language} ({lang.proficiency}){index < data.languages.length - 1 ? ', ' : ''}
          </span>
        ))}
      </p>
    </section>
  )}
</body>
</html>

---
import Layout from '../../layouts/Layout.astro';
import ExternalLinkIcon from '../icons/ExternalLinkIcon.astro';
import CheckIcon from '../icons/CheckIcon.astro';
import ArrowLeftIcon from '../icons/ArrowLeftIcon.astro';
import ArrowRightIcon from '../icons/ArrowRightIcon.astro';
import GitHubIcon from '../icons/GitHubIcon.astro';

interface Props {
  lang: 'ko' | 'en';
  project: any;
  index: number;
  total: number;
  allProjects: any[];
  labels: any;
}

const { lang, project, index, total, allProjects, labels } = Astro.props;
const prevProject = index > 0 ? allProjects[index - 1] : null;
const nextProject = index < total - 1 ? allProjects[index + 1] : null;

const period = `${project.period.start} â€” ${project.period.end}`;
const basePath = lang === 'en' ? `${import.meta.env.BASE_URL}/en` : import.meta.env.BASE_URL;

const projectName = project.name[lang] || project.name.ko;
const projectSummary = project.summary[lang] || project.summary.ko;
const projectHighlights = project.highlights[lang] || project.highlights.ko;
const teamComposition = project.teamComposition ? (project.teamComposition[lang] || project.teamComposition.ko || project.teamComposition) : null;
---

<Layout title={`${projectName} | Portfolio`} description={projectSummary} lang={lang}>
  <article class="mx-auto max-w-4xl">
    <!-- Back to Portfolio -->
    <nav class="mb-8">
      <a 
        href={`${basePath}/portfolio`}
        class="inline-flex items-center gap-2 text-sm text-gray-600 transition-colors hover:text-primary-600 dark:text-gray-400 dark:hover:text-primary-400"
      >
        <ArrowLeftIcon class="h-4 w-4" />
        {labels.backToPortfolio}
      </a>
    </nav>

    <!-- Project Header -->
    <header class="mb-10">
      <div class="flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
        <div>
          <div class="mb-2 flex items-center gap-2">
            <span class={`inline-block rounded-full px-3 py-1 text-xs font-medium ${project.type === 'team' ? 'bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-300' : 'bg-green-100 text-green-700 dark:bg-green-900/30 dark:text-green-300'}`}>
              {project.type === 'team' ? labels.team : labels.personal}
            </span>
          </div>
          <h1 class="text-3xl font-bold text-gray-900 dark:text-white sm:text-4xl">
            {projectName}
          </h1>
        </div>
        <p class="text-sm font-medium text-gray-500 dark:text-gray-400 sm:text-base">
          {period}
        </p>
      </div>
      <p class="mt-4 text-lg text-gray-600 dark:text-gray-400">{projectSummary}</p>
      
      {/* GitHub & Links */}
      <div class="mt-6 flex flex-wrap gap-3">
        {project.github && (
          <a 
            href={project.github} 
            target="_blank" 
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 rounded-lg bg-gray-900 px-4 py-2 text-sm font-medium text-white transition-colors hover:bg-gray-700 dark:bg-gray-100 dark:text-gray-900 dark:hover:bg-gray-300"
          >
            <GitHubIcon class="h-4 w-4" />
            {labels.github}
          </a>
        )}
      </div>
    </header>

    {/* Team Composition */}
    {teamComposition && (
      <section class="mb-10">
        <h2 class="section-title mb-4">{labels.teamComposition}</h2>
        <p class="text-gray-700 dark:text-gray-300">{teamComposition}</p>
      </section>
    )}

    {/* Collaboration Tools */}
    {project.collaborationTools && project.collaborationTools.length > 0 && (
      <section class="mb-10">
        <h2 class="section-title mb-4">{labels.collaborationTools}</h2>
        <div class="flex flex-wrap gap-2">
          {project.collaborationTools.map((tool: string) => (
            <span class="rounded-lg bg-gray-100 px-3 py-1.5 text-sm font-medium text-gray-700 dark:bg-gray-700 dark:text-gray-300">
              {tool}
            </span>
          ))}
        </div>
      </section>
    )}

    <!-- Highlights -->
    {projectHighlights && projectHighlights.length > 0 && (
      <section class="mb-10">
        <h2 class="section-title mb-6">{labels.highlights}</h2>
        <ul class="space-y-3">
          {projectHighlights.map((highlight: string) => (
            <li class="flex items-start gap-3 text-gray-700 dark:text-gray-300">
              <CheckIcon class="mt-1 h-5 w-5 flex-shrink-0 text-primary-500" />
              <span class="text-lg">{highlight}</span>
            </li>
          ))}
        </ul>
      </section>
    )}

    <!-- Tech Stack -->
    {project.skills && project.skills.length > 0 && (
      <section class="mb-10">
        <h2 class="section-title mb-6">{labels.skills}</h2>
        <div class="flex flex-wrap gap-2">
          {project.skills.map((tech: string) => (
            <span class="rounded-lg bg-gray-100 px-3 py-1.5 text-sm font-medium text-gray-700 dark:bg-gray-700 dark:text-gray-300">
              {tech}
            </span>
          ))}
        </div>
      </section>
    )}

    <!-- Related Blog Posts -->
    {project.blogPosts && project.blogPosts.length > 0 && (
      <section class="mb-10">
        <h2 class="section-title mb-6">{labels.relatedPosts}</h2>
        <ul class="space-y-3">
          {project.blogPosts.map((post: any) => {
            const postTitle = post.title[lang] || post.title.ko || post.title;
            return (
              <li>
                <a 
                  href={post.url} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 text-primary-600 transition-colors hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300"
                >
                  <span>{postTitle}</span>
                  <ExternalLinkIcon class="h-4 w-4" />
                </a>
              </li>
            );
          })}
        </ul>
      </section>
    )}

    <!-- Related Links -->
    {project.links && Object.keys(project.links).length > 0 && (
      <section class="mb-10">
        <h2 class="section-title mb-6">{labels.relatedLinks}</h2>
        <ul class="space-y-3">
          {Object.entries(project.links).map(([key, url]) => (
            <li>
              <a 
                href={url as string} 
                target="_blank" 
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 text-primary-600 transition-colors hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300"
              >
                <span class="capitalize">{key.replace(/([A-Z])/g, ' $1').trim()}</span>
                <ExternalLinkIcon class="h-4 w-4" />
              </a>
            </li>
          ))}
        </ul>
      </section>
    )}

    <!-- Navigation -->
    <nav class="mt-12 border-t border-gray-200 pt-8 dark:border-gray-700">
      <div class="flex items-center justify-between">
        {prevProject ? (
          <a 
            href={`${basePath}/portfolio/${prevProject.slug}`}
            class="group flex items-center gap-2 text-gray-600 transition-colors hover:text-primary-600 dark:text-gray-400 dark:hover:text-primary-400"
          >
            <ArrowLeftIcon class="h-5 w-5 transition-transform group-hover:-translate-x-1" />
            <div class="text-left">
              <p class="text-xs text-gray-400 dark:text-gray-500">{labels.previousProject}</p>
              <p class="font-medium">{prevProject.name[lang] || prevProject.name.ko}</p>
            </div>
          </a>
        ) : (
          <div></div>
        )}
        
        <a 
          href={`${basePath}/portfolio`}
          class="rounded-lg border border-gray-300 px-4 py-2 text-sm font-medium text-gray-700 transition-colors hover:bg-gray-100 dark:border-gray-600 dark:text-gray-300 dark:hover:bg-gray-800"
        >
          {labels.backToPortfolio}
        </a>
        
        {nextProject ? (
          <a 
            href={`${basePath}/portfolio/${nextProject.slug}`}
            class="group flex items-center gap-2 text-gray-600 transition-colors hover:text-primary-600 dark:text-gray-400 dark:hover:text-primary-400"
          >
            <div class="text-right">
              <p class="text-xs text-gray-400 dark:text-gray-500">{labels.nextProject}</p>
              <p class="font-medium">{nextProject.name[lang] || nextProject.name.ko}</p>
            </div>
            <ArrowRightIcon class="h-5 w-5 transition-transform group-hover:translate-x-1" />
          </a>
        ) : (
          <div></div>
        )}
      </div>
    </nav>
  </article>
</Layout>
